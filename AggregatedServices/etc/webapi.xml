<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/guest-aggregated-carts/:cartId" method="GET">
        <service class="Magento\AggregatedServices\Api\Service\GetGuestCartInterface" method="get"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/customer-aggregated-carts/mine" method="GET">
        <service class="Magento\AggregatedServices\Api\Service\GetCartInterface" method="get"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/carts/mine/merge-with-guest-cart/:guestCartId" method="PUT">
        <service class="Magento\AggregatedServices\Api\Service\MergeCartsInterface" method="mergeGuestCartIntoActiveCustomerCart"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerCartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
